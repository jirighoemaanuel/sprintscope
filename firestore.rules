rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Athletes collection - users can read and write athletes they created
    match /athletes/{athleteId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.coachId == request.auth.uid);
    }
    
    // Videos collection - users can read and write videos they created
    match /videos/{videoId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.coachId == request.auth.uid);
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 